<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".activity.MainActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/colorWidgetBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/alarmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingTop="10dp"
                android:text="alarm"
                android:textSize="19sp"
                android:textColor="@color/colorSelectedTextAndIcon"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:background="@color/colorWidgetBackground"/>

            <Button
                android:id="@+id/musicButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingTop="10dp"
                android:text="music"
                android:textSize="19sp"
                android:textColor="@color/colorRowTextAndIcon"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:background="@color/colorWidgetBackground"/>

            <Button
                android:id="@+id/infoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingTop="10dp"
                android:text="info"
                android:textSize="19sp"
                android:textColor="@color/colorRowTextAndIcon"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:background="@color/colorWidgetBackground"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="50dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorWidgetBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88 : 88"
                android:textSize="32sp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/colorRowTextAndIcon"
                android:background="@color/colorWidgetBackground"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SET TIME"
                android:textSize="26sp"
                android:textColor="@color/colorSelectedTextAndIcon"
                android:layout_weight="1"/>

            <Switch
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:id="@+id/volumeSettingsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/colorRowTextAndIcon"
            android:layout_gravity="center_horizontal"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/volumeSeekBarCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/colorWidgetBackground">

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout android:id="@+id/alarmPeriodsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Gradually increasing alarm"
                android:textColor="@color/colorRowTextAndIcon"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/roboto"
                android:layout_weight="1"/>

            <LinearLayout android:id="@+id/buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="Never"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorSelectedTextAndIcon"
                    android:background="@drawable/button_never_selected" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="30s"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorRowTextAndIcon"
                    android:background="@drawable/button_increase_alarm_unselected" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="..."
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorRowTextAndIcon"
                    android:background="@drawable/button_increase_alarm_unselected" />

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

    <LinearLayout android:id="@+id/alarmModeSettingsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm mode"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@color/colorRowTextAndIcon"
            android:fontFamily="@font/roboto"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/button_alarmmode_sv_unselected"
                android:drawableLeft="@drawable/ic_baseline_volume_up_24"
                android:drawableRight="@drawable/ic_baseline_volume_off_24"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>

            <!--            <Button-->
            <!--                android:layout_width="100dp"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:background="@drawable/button_alarmmode_sv_unselected"-->
            <!--                -->
            <!--                android:paddingStart="15dp"-->
            <!--                android:paddingEnd="15dp"/>-->

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@drawable/button_alarmmode_sv_unselected"
                android:src="@drawable/ic_baseline_volume_up_24"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@drawable/button_alarmmode_sv_unselected"
                android:src="@drawable/ic_baseline_vibration_24"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@drawable/button_alarmmode_sv_unselected"
                android:src="@drawable/ic_baseline_volume_off_24"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/colorWidgetBackground">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:text="MO"
                    android:textColor="@color/colorRowTextAndIcon"
                    android:background="@drawable/button_day_unselected"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:text="TU"
                    android:textColor="@color/colorSelectedTextAndIcon"
                    android:background="@color/colorWidgetBackground"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"/>

                <Button
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:text="WE"
                    android:textColor="@color/colorRowTextAndIcon"
                    android:background="@drawable/button_day_unselected"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"/>

                <Button
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:text="TH"
                    android:textColor="@color/colorRowTextAndIcon"
                    android:background="@drawable/button_day_unselected"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"/>

                <Button
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:text="FR"
                    android:textColor="@color/colorSelectedTextAndIcon"
                    android:background="@color/colorWidgetBackground"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"/>

                <Button
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:text="SA"
                    android:textColor="@color/colorSelectedTextAndIcon"
                    android:background="@color/colorWidgetBackground"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"/>

                <Button
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:text="SU"
                    android:textColor="@color/colorRowTextAndIcon"
                    android:background="@drawable/button_day_unselected"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>